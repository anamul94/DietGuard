# Environment Variables for Docker Compose

# AWS Credentials (for LLM)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Database (overridden by docker-compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@postgres:5432/dietguard_db

# Redis (overridden by docker-compose)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=myredissecret

# JWT Secret
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=DietGuard
DEBUG=True

# Langfuse (optional)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com
